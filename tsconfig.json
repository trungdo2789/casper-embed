{
  "compilerOptions": {
    "rootDir": "./src",
    "moduleResolution": "node",
    "strict": false,
    "module": "esnext",
    "target": "es5",
    "lib": ["esnext", "DOM"],
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitThis": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
